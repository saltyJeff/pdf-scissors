{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": 1,
      "quotes": ["warn", "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }],
      "semi": ["warn", "never"],
      "array-bracket-spacing": ["error", "always"]
    }
  }